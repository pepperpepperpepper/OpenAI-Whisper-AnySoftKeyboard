<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ask="http://schemas.android.com/apk/res-auto">
    <Row
        android:rowEdgeFlags="top"
        android:keyHeight="@integer/key_short_height">
        <Key
            android:keyWidth="20%p"
            android:codes="@integer/key_code_tab"
            android:keyLabel="Tab"
            ask:isFunctional="true"
            android:keyEdgeFlags="left" />
        <Key
            android:keyWidth="20%p"
            android:codes="@integer/key_code_ctrl"
            ask:isFunctional="true"
            android:isModifier="true"
            android:isSticky="true"
            android:keyLabel="Ctrl" />
        <Key
            android:keyWidth="20%p"
            android:codes="@integer/key_code_alt_modifier"
            ask:isFunctional="true"
            android:isModifier="true"
            android:isSticky="true"
            android:keyLabel="Alt" />
        <Key
            android:keyWidth="20%p"
            android:codes="@integer/key_code_function"
            ask:isFunctional="true"
            android:isModifier="true"
            android:isSticky="true"
            android:keyLabel="Fn" />
        <Key
            android:keyWidth="20%p"
            android:codes="@integer/key_code_esc"
            ask:isFunctional="true"
            android:keyLabel="Esc"
            android:keyEdgeFlags="right" />
    </Row>
</Keyboard>
